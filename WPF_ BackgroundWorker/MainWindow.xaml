<Window x:Class="WPF__BackgroundWorker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF__BackgroundWorker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblStatus" Content="" HorizontalAlignment="Left" Margin="10,17,0,0" VerticalAlignment="Top" Width="225"/>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="541,10,0,0" VerticalAlignment="Top" Width="77" Height="37" Click="BtnStart_Click"/>
        <Button x:Name="btnPause" Content="Pause" HorizontalAlignment="Left" Margin="623,10,0,0" VerticalAlignment="Top" Width="77" Height="37" Click="BtnPause_Click"/>
        <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Left" Margin="705,10,0,0" VerticalAlignment="Top" Width="77" Height="37" Click="BtnStop_Click"/>
        <ProgressBar x:Name="progress" HorizontalAlignment="Left" Height="37" Margin="10,376,0,0" VerticalAlignment="Top" Width="772"/>
    </Grid>
</Window>
